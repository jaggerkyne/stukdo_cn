<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html:{class: "form-signin"}) do |f| %>
    <h2 class="text-center">登录系统</h2>
    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Email", input_html: {class: "form-control"} %>
    <%= f.input :password, required: false, label: false, placeholder: "请输入密码", input_html: {class: "form-control"} %>

  <div class="form-actions">
    <%= f.button :submit, "马上登录", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
